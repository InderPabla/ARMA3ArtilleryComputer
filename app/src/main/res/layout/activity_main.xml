<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout1">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Solution"
        android:id="@+id/fireSolution"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/yourXCoord"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"
        android:singleLine="true"
        android:autoText="false"
        android:foreground="#190000ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/yourYCoord"
        android:layout_below="@+id/yourXCoord"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#010101"
        android:singleLine="true"
        android:autoText="false"
        android:foreground="#190000ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/yourHeight"
        android:layout_below="@+id/yourYCoord"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#010101"
        android:singleLine="true"
        android:autoText="false"
        android:foreground="#190000ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enemyXCoord"
        android:layout_below="@+id/yourHeight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#010101"
        android:singleLine="true"
        android:foreground="#19ff0009" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enemyYCoord"
        android:layout_below="@+id/enemyXCoord"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#010101"
        android:singleLine="true"
        android:foreground="#19ff0009" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/enemyHeight"
        android:layout_below="@+id/enemyYCoord"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#010101"
        android:singleLine="true"
        android:foreground="#19ff0009" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your X Coord"
        android:id="@+id/yourXCoordText"
        android:textColor="#006cff"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_toEndOf="@+id/yourXCoord"
        android:layout_alignTop="@+id/yourXCoord"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Y Coord"
        android:id="@+id/yourYCoordText"
        android:textColor="#006cff"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/yourYCoord"
        android:layout_alignStart="@+id/yourXCoordText"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Height"
        android:id="@+id/yourHeightText"
        android:textColor="#006cff"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/yourHeight"
        android:layout_alignStart="@+id/yourYCoordText"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy X Coord"
        android:id="@+id/enemyXCoordText"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/enemyXCoord"
        android:layout_alignStart="@+id/yourHeightText"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Y Coord"
        android:id="@+id/enemyYCoordText"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/enemyYCoord"
        android:layout_toEndOf="@+id/enemyYCoord"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Height"
        android:id="@+id/enemyHeightText"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_alignTop="@+id/enemyHeight"
        android:layout_alignStart="@+id/enemyYCoordText"
        android:layout_marginTop="15dp" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/enemyHeight">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mk6 Mortar"
            android:id="@+id/mk6"
            android:layout_below="@+id/enemyHeight"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M4 or 2S9 Scorcher"
            android:id="@+id/m4"
            android:layout_below="@+id/mk6"
            android:layout_alignParentStart="true"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M5 Sandstorm MLRS"
            android:id="@+id/m5"
            android:layout_below="@+id/m4"
            android:layout_alignParentStart="true"
            android:checked="false" />
    </RadioGroup>
</RelativeLayout>
